---
import Layout from './Layout.astro';
import Container from './Container';

export interface Props {
  noHeader?: boolean;
  hideAvatar?: boolean;
  hideHeaderNav?: boolean;
  hideFooterNav?: boolean;
}

const { noHeader, hideAvatar, hideHeaderNav, hideFooterNav } = Astro.props;
---

<Layout hideAvatar={hideAvatar} hideHeaderNav={hideHeaderNav} hideFooterNav={hideFooterNav}>
  <Container className="mt-16 sm:mt-32 print:m-0">
    {
      noHeader ? (
        <slot />
      ) : (
        <>
          <header>
            <div class="flex justify-between items-center flex-wrap gap-3">
              <h1 class="font-techie text-5xl sm:text-6xl max-w-2xl px-3 font-bold text-zinc-800">
                <slot name="title" />
              </h1>
              <div class="px-3">
                <slot name="action" />
              </div>
            </div>
            <p class="mt-6 max-w-2xl px-3 text-base text-zinc-600">
              <slot name="description" />
            </p>
          </header>
          <div class="mt-16 sm:mt-20">
            <slot />
          </div>
        </>
      )
    }
  </Container>
</Layout>
