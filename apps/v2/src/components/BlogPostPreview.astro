---
export interface Props {
	post: any;
}

const { post } = Astro.props;
---

<article>
	<header>
		<time class="mb-3 text-sm text-zinc-400">{post.frontmatter.pubDate}</time>
		<h2 class="text-base font-semibold tracking-tight text-zinc-800">
			<a href={post.url}>{post.frontmatter.title}</a>
		</h2>
	</header>
	{post.frontmatter.description && <>
		<p class="text-sm text-zinc-600 mt-2">{post.frontmatter.description}</p>
		<div class="mt-4">
			<a href={post.url} class="text-primary-500 text-sm">Read more</a>
		</div>
	</>}
</article>