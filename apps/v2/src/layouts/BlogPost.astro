---
import BaseHead from '../components/BaseHead.astro';
import BlogPost from '../components/BlogPost.astro';
import Container from '../components/Container';
import Layout from '../components/Layout.astro';
import './shiki.css';

const { content } = Astro.props;
const { title, description, pubDate, author, heroImage, permalink, alt } =
  content;
---

<html lang={content.lang || 'en'}>
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css"
    />
    <BaseHead {title} {description} {permalink} date={pubDate} />
  </head>

  <body>
    <Layout>
      <Container>
        <BlogPost {title} {author} {heroImage} publishDate={pubDate} {alt}>
          <slot />
        </BlogPost>
      </Container>
    </Layout>
  </body>
</html>
