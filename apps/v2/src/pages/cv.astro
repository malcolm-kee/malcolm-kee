---
import BaseHead from '~/components/BaseHead.astro';
import { Button } from '~/components/Button';
import { PrinterIcon } from '~/components/icons';
import PageLayout from '~/components/PageLayout.astro';
import { GitHubIcon, LinkedInIcon } from '~/components/SocialIcons';
import { workExperiences } from '~/data/cv';
import { socialMediaData } from '~/data/social-media';

const permalink = Astro.url.toString();
---

<html>
  <head>
    <BaseHead
      title="CV - Malcolm Kee"
      permalink={permalink}
      description="My CV that is downloadable"
    />
  </head>
  <body>
    <PageLayout noHeader>
      <div class="flex justify-between items-center mb-3 print:hidden">
        <span class="text-2xl text-zinc-500">Printable CV</span>
        <Button data-button="print">
          Print <PrinterIcon className="h-4 w-4 text-zinc-200" />
        </Button>
      </div>
      <!-- A4 dimension: 2480 x 3508 -->
      <div
        class="relative -mx-4 sm:mx-auto max-w-[1240px] px-2 md:px-6 py-6 shadow print:p-0 print:shadow-none"
      >
        <div
          class="absolute top-0 inset-x-0 grid grid-cols-3 items-end px-2 md:px-6 h-32 bg-primary-800 print:p-0 print:h-24 print:bg-white"
        >
          <h1
            class="hidden md:block print:block col-start-2 col-span-2 leading-none text-6xl xl:text-7xl font-bold text-zinc-100 print:text-zinc-600 print:pb-4"
          >
            Malcolm Kee
          </h1>
        </div>
        <div
          class="flex flex-col items-center gap-3 md:grid md:grid-cols-3 md:items-end md:gap-0 print:grid print:grid-cols-3 print:items-end print:gap-0"
        >
          <div class="flex relative justify-center">
            <div
              class="flex justify-center items-center w-40 sm:w-44 lg:w-52 aspect-square p-1 rounded-full bg-white"
            >
              <img
                src="/assets/portrait.jpg"
                alt=""
                class="block w-full sm:w-40 lg:w-48 rounded-full bg-zinc-100 object-cover"
                width={433}
                height={433}
              />
            </div>
          </div>
          <h1
            class="text-4xl sm:text-6xl pl-2 text-center font-bold text-zinc-600 md:hidden print:hidden"
          >
            Malcolm Kee
          </h1>
          <div class="md:col-span-2 md:pb-3">
            <ul class="space-y-1 lg:space-y-2">
              <li>
                <a
                  class="flex items-center gap-2"
                  href={socialMediaData.linkedin}
                >
                  <LinkedInIcon className="w-6 h-6 flex-none fill-zinc-500" />
                  <span class="text-xs">{socialMediaData.linkedin}</span>
                </a>
              </li>
              <li>
                <a
                  class="flex items-center gap-2"
                  href={socialMediaData.github}
                >
                  <GitHubIcon className="w-6 h-6 flex-none fill-zinc-500" />
                  <span class="text-xs">{socialMediaData.github}</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <section class="mt-12 px-3 md:px-6 print:mt-6">
          <h2 class="text-2xl md:text-4xl font-medium text-zinc-400">
            Experiences
          </h2>
          <ol class="mt-6 space-y-8">
            {
              workExperiences.map((role) => (
                <li>
                  <div class="flex gap-4">
                    <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                      {role.logo ? (
                        <img
                          src={role.logo}
                          alt=""
                          class="h-8 w-8 rounded-full"
                          width={32}
                          height={32}
                        />
                      ) : (
                        <div class="w-8 h-8 rounded-full bg-zinc-400" />
                      )}
                    </div>
                    <dl class="flex flex-auto flex-wrap gap-x-2">
                      <dt class="sr-only">Company</dt>
                      <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
                        {role.company}
                      </dd>
                      <dt class="sr-only">Role</dt>
                      <dd class="text-xs text-zinc-500 dark:text-zinc-400">
                        {role.title}
                      </dd>
                      <dt class="sr-only">Date</dt>
                      <dd
                        class="ml-auto text-xs text-zinc-400 dark:text-zinc-500"
                        aria-label={`${role.start} until ${role.end}`}
                      >
                        <time datetime={role.start}>{role.start}</time>{' '}
                        <span aria-hidden="true">â€”</span>{' '}
                        <time datetime={role.end}>{role.end}</time>
                      </dd>
                    </dl>
                  </div>
                  {role.descriptions && (
                    <div class="mt-1 lg:pl-14">
                      {role.descriptions.map((desc) => (
                        <p class="text-sm text-zinc-700">{desc}</p>
                      ))}
                    </div>
                  )}
                </li>
              ))
            }
          </ol>
        </section>
      </div>
    </PageLayout>
    <script>
      const printBtn = document.querySelector('[data-button="print"]');
      if (printBtn) {
        printBtn.addEventListener('click', () => window.print());
      }
    </script>
  </body>
</html>
