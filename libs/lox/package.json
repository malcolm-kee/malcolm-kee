{
  "name": "lox",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "lox": "dist/lox-bin.js"
  },
  "types": "dist/lox.d.ts",
  "module": "dist/lox.mjs",
  "main": "dist/lox.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lox.d.mts",
        "default": "./dist/lox.mjs"
      },
      "require": {
        "types": "./dist/lox.d.ts",
        "default": "./dist/lox.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  }
}
